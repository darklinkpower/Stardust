                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Margin="0,5,0,5" Background="{DynamicResource GridViewSeparatorBrush}" />
                                                <ContentControl x:Name="SteamScreenshots_SteamScreenshotsViewControl" Margin="0,10,20,0" />
                                            </StackPanel>
