<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <Style TargetType="{x:Type GridViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewGameOverview}">
                    <Border
                        Margin="{DynamicResource PanelTopPanelSeparator}"
                        Padding="10,0,5,10"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                        BorderBrush="{DynamicResource PanelSeparatorBrush}">
                        <DockPanel>
                            <Button
                                Margin="0,10,15,5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{MainViewModel CloseGameSideBarCommand}"
                                Content="r"
                                DockPanel.Dock="Top"
                                FontFamily="Marlett"
                                Style="{DynamicResource SimpleButton}" />

                            <TextBlock
                                Margin="0,20,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Text="{DynamicResource LOCErrorNoGameSelected}">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <Trigger Property="DataContext" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <DockPanel DockPanel.Dock="Top">
                                <DockPanel.Style>
                                    <Style TargetType="DockPanel">
                                        <Style.Triggers>
                                            <Trigger Property="DataContext" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DockPanel.Style>
                                <Grid x:Name="ExtraMetadataLoader_LogoLoaderControlGrid"
                                    DockPanel.Dock="Top"
                                    Tag="{DynamicResource GridViewAllowUseOfLogos}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Border
                                        Height="{PluginSettings Plugin=ExtraMetadataLoader,
                                                                Path=LogoMaxHeight,
                                                                FallbackValue=0}"
                                        MaxWidth="{PluginSettings Plugin=ExtraMetadataLoader,
                                                                  Path=LogoMaxWidth,
                                                                  FallbackValue=0}"
                                        Padding="10,5,10,10">
                                        <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" VerticalAlignment="Center" />
                                    </Border>
                                </Grid>
                                <DockPanel DockPanel.Dock="Top">
                                    <Image Name="PART_ImageIcon"
                                        MaxWidth="32"
                                        MaxHeight="32"
                                        Margin="0,0,10,0"
                                        DockPanel.Dock="Left"
                                        RenderOptions.BitmapScalingMode="Fant">
                                        <Image.Clip>
                                            <RectangleGeometry RadiusX="4" RadiusY="4" Rect="0,0,32,32" />
                                        </Image.Clip>
                                    </Image>
                                    <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Right">
                                        <ContentControl.Resources>
                                            <Style BasedOn="{StaticResource PlayersCountButtonStyle}" TargetType="Button" />
                                        </ContentControl.Resources>
                                    </ContentControl>
                                    <Border
                                        Margin="0,0,10,0"
                                        DockPanel.Dock="Left"
                                        Tag="{DynamicResource GridViewDisplayGameNameIfLogoVisible}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                            <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControlGrid, Path=Visibility}" Value="Visible" />
                                                            <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                            <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Name="PART_TextDisplayName"
                                            VerticalAlignment="Center"
                                            FontFamily="{DynamicResource FontFamily}"
                                            FontSize="{DynamicResource FontSizeLarger}"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            TextWrapping="Wrap" />
                                    </Border>

                                </DockPanel>

                                <ContentControl x:Name="DuplicateHider_SourceSelector"
                                    Height="24"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalContentAlignment="Center"
                                    DockPanel.Dock="Top"
                                    RenderOptions.BitmapScalingMode="Fant" />

                                <Grid Margin="0,10,0,10" DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MaxWidth="150" />
                                        <ColumnDefinition Width="*" MaxWidth="150" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button Name="PART_ButtonPlayAction"
                                        Grid.Column="0"
                                        Height="40"
                                        Style="{DynamicResource PlayButtonViews}" />
                                    <Button Name="PART_ButtonContextAction"
                                        Grid.Column="0"
                                        Height="40"
                                        Style="{DynamicResource ContextButtonViews}" />
                                    <Button Name="PART_ButtonMoreActions"
                                        Grid.Column="1"
                                        Height="40"
                                        Margin="10,0,0,0"
                                        Content="{DynamicResource LOCMoreAction}"
                                        Style="{DynamicResource MoreActionButtonViews}" />
                                    <StackPanel
                                        Grid.Column="2"
                                        Margin="0,0,5,0"
                                        Orientation="Horizontal">
                                        <ToggleButton Name="GameFavoriteToggleButton"
                                            Height="40"
                                            Margin="10,0,0,0"
                                            Focusable="False"
                                            IsChecked="{PluginSettings Plugin=ThemeExtras,
                                                                       Path=Game.Favorite,
                                                                       Mode=TwoWay,
                                                                       FallbackValue={StaticResource False}}"
                                            Style="{DynamicResource PanelFavoriteToggleButton}"
                                            Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin}" />
                                        <ContentControl x:Name="PlayState_GameStateSwitchControl"
                                            Margin="10,0,0,0"
                                            Visibility="{PluginSettings Plugin=PlayState,
                                                                        Path=IsControlVisible,
                                                                        FallbackValue=Collapsed,
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <Button x:Name="PART_ButtonEditGame"
                                            Height="40"
                                            Margin="10,0,0,0"
                                            Content="&#xeded;"
                                            Focusable="False"
                                            FontFamily="{DynamicResource FontIcoFont}">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                                    <Setter Property="Opacity" Value="0.1" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(Button.Opacity)"
                                                                            To="1"
                                                                            Duration="0:0:0.5" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(Button.Opacity)"
                                                                            To="0.1"
                                                                            Duration="0:0:0.5" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <ScrollViewer x:Name="PART_ScrollViewHost"
                                    HorizontalAlignment="Stretch"
                                    DockPanel.Dock="Top"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Expander
                                            Grid.Row="{DynamicResource GridViewSectionOrderDetails}"
                                            Margin="0,0,5,0"
                                            IsExpanded="True">
                                            <Expander.Header>
                                                <TextBlock
                                                    Cursor="Hand"
                                                    FontSize="{DynamicResource FontSizeLarge}"
                                                    FontWeight="Medium"
                                                    Style="{DynamicResource BaseTextBlockStyle}"
                                                    Text="{DynamicResource LOCGameDetails}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <StackPanel.Resources>
                                                    <Style TargetType="ItemsControl">
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </Style>
                                                    <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                                                        <Setter Property="Margin" Value="0,4,8,4" />
                                                        <Setter Property="VerticalAlignment" Value="Top" />
                                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                    </Style>
                                                    <Style BasedOn="{StaticResource PropertyItemButton}" TargetType="Button" />
                                                </StackPanel.Resources>

                                                <GridEx
                                                    Margin="0,5,0,10"
                                                    AutoLayoutColumns="2"
                                                    ColumnCount="2"
                                                    RowCount="25"
                                                    StarColumns="1">
                                                    <Grid.Resources>
                                                        <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock" />
                                                        <Style x:Key="Icon"
                                                            BasedOn="{StaticResource BaseTextBlockStyle}"
                                                            TargetType="TextBlock">
                                                            <Setter Property="Width" Value="24" />
                                                            <Setter Property="FontWeight" Value="Normal" />
                                                        </Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Normal" />
                                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                        </Style>
                                                    </Grid.Resources>

                                                    <Label Name="PART_ElemPlayTime">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEEDC;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCTimePlayed}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemLastPlayed">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEC45;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCLastPlayed}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemRecentActivity">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEC45;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRecentActivityLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextRecentActivity" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemAdded">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEC45;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDateAddedLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextAdded" VerticalAlignment="Center" />

                                                    <Label Visibility="{Binding ElementName=CompStatusElemsGrid, Path=Visibility}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEED6;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCompletionStatus}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Grid x:Name="CompStatusElemsGrid" VerticalAlignment="Center">
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=PART_ButtonCompletionStatus, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=ThemeExtras_SettableCompletionStatus, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Settings DetailsVisibility.CompletionStatus}" Value="False">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>

                                                        <ContentControl x:Name="ThemeExtras_SettableCompletionStatus"
                                                            HorizontalAlignment="Left"
                                                            Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin,
                                                                                      Status=Installed}">
                                                            <ContentControl.Resources>
                                                                <Style BasedOn="{StaticResource ThemeExtrasUserControlCompStatusStyle}" TargetType="UserControl" />
                                                            </ContentControl.Resources>
                                                        </ContentControl>

                                                        <Border Tag="{PluginStatus Plugin=felixkmh_Extras_Plugin, Status=Installed}" Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Tag, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                                            <Button Name="PART_ButtonCompletionStatus" VerticalAlignment="Center" />
                                                        </Border>
                                                    </Grid>

                                                    <Label Name="PART_ElemInstallDirectory">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEC5B;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemInstallSize">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xef43;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCInstallSizeLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextInstallSize" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemReleaseDate">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEC45;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameReleaseDateTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonReleaseDate" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemLibrary">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEF65;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameProviderTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonLibrary" VerticalAlignment="Center" />
                                                    <Label Name="PART_ElemSource">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEF65;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSourceLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonSource" VerticalAlignment="Center" />
                                                    <Label Name="PART_ElemPlatform">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEEEE;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGamePlatformTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsPlatforms" />

                                                    <Label Name="PART_ElemCategories">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEF74;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameCategoriesTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsCategories" />

                                                    <Label Name="PART_ElemGenres">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEF74;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGenreLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsGenres" />

                                                    <Label Name="PART_ElemDevelopers">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEEF3;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDeveloperLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsDevelopers" />

                                                    <Label Name="PART_ElemPublishers">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEEF3;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCPublisherLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsPublishers" />

                                                    <Label Name="PART_ElemAgeRating">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text=""
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCAgeRatingLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsAgeRatings" />

                                                    <Label Name="PART_ElemSeries">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEEEF;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSeriesLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsSeries" />

                                                    <Label Name="PART_ElemRegion">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xF02C;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRegionLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsRegions" />

                                                    <Label Name="PART_ElemVersion">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xEFD1;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCVersionLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonVersion" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemCommunityScore">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xF000;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCommunityScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <StackPanel Orientation="Horizontal"
                                                                Visibility="{Binding ElementName=PART_TextCommunityScore, Path=Visibility}">
                                                        <TextBlock Name="PART_TextCommunityScore" VerticalAlignment="Center"
                                                                   Style="{DynamicResource TextBlockGameScore}" />
                                                        <ContentControl Content="{Binding Game.CommunityScore}"
                                                                        Padding="6,0,0,4"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Background="Transparent"
                                                                        Foreground="{Binding ElementName=PART_TextCommunityScore, Path=Foreground}"
                                                                        Height="{Binding ElementName=PART_TextCommunityScore, Path=ActualHeight}"
                                                                        ContentTemplate="{StaticResource FiveStarScoreTemplate}"/>
                                                    </StackPanel>

                                                    <Label Name="PART_ElemCriticScore">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xF000;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCriticScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <StackPanel Orientation="Horizontal"
                                                                Visibility="{Binding ElementName=PART_TextCriticScore, Path=Visibility}">
                                                        <TextBlock Name="PART_TextCriticScore" VerticalAlignment="Center"
                                                                   Style="{DynamicResource TextBlockGameScore}" />
                                                        <ContentControl Content="{Binding Game.CriticScore}"
                                                                        Padding="6,0,0,4"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Background="Transparent"
                                                                        Foreground="{Binding ElementName=PART_TextCriticScore, Path=Foreground}"
                                                                        Height="{Binding ElementName=PART_TextCriticScore, Path=ActualHeight}"
                                                                        ContentTemplate="{StaticResource FiveStarScoreTemplate}"/>
                                                    </StackPanel>

                                                    <Label Name="PART_ElemUserScore">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontFamily="{StaticResource FontIcoFont}"
                                                                Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                                Style="{StaticResource Icon}"
                                                                Text="&#xF000;"
                                                                Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCUserScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <StackPanel Orientation="Horizontal"
                                                                Visibility="{Binding ElementName=PART_TextUserScore, Path=Visibility}">
                                                        <TextBlock Name="PART_TextUserScore" VerticalAlignment="Center"
                                                                   Style="{DynamicResource TextBlockGameScore}" />
                                                        <ContentControl Content="{Binding Game.UserScore}"
                                                                        Padding="6,0,0,4"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Background="Transparent"
                                                                        Foreground="{Binding ElementName=PART_TextUserScore, Path=Foreground}"
