<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type GridViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewGameOverview}">
                    <Border Padding="10,0,5,10" BorderBrush="{DynamicResource PanelSeparatorBrush}"
                            d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="1,0,0,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Settings GridViewDetailsPosition}" Value="Left">
                                        <Setter Property="BorderThickness" Value="0,0,1,0" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                        <Setter Property="BorderThickness" Value="0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <DockPanel>
                            <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Content="r" FontFamily="Marlett"
                                    Style="{DynamicResource SimpleButton}"
                                    Command="{MainViewModel CloseGameSideBarCommand}"
                                    DockPanel.Dock="Top" Margin="0,10,15,5" />

                            <TextBlock Text="{DynamicResource LOCErrorNoGameSelected}" 
                                   Margin="0,20,0,0" DockPanel.Dock="Top"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <Trigger Property="DataContext" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <DockPanel DockPanel.Dock="Top">
                                <DockPanel.Style>
                                    <Style TargetType="DockPanel">
                                        <Style.Triggers>
                                            <Trigger Property="DataContext" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DockPanel.Style>
                                <Grid x:Name="ExtraMetadataLoader_LogoLoaderControlGrid"
                                      DockPanel.Dock="Top" Tag="{DynamicResource GridViewAllowUseOfLogos}">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Border Padding="10,5,10,10" Height="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}" MaxWidth="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxWidth, FallbackValue=0}">
                                        <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" VerticalAlignment="Center" />
                                    </Border>
                                </Grid>
                                <DockPanel DockPanel.Dock="Top">
                                    <Image Name="PART_ImageIcon" DockPanel.Dock="Left" MaxHeight="32" MaxWidth="32"
                                           RenderOptions.BitmapScalingMode="Fant" Margin="0,0,10,0" />
                                    <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                                    DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <ContentControl.Resources>
                                            <Style TargetType="Button" BasedOn="{StaticResource PlayersCountButtonStyle}" />
                                        </ContentControl.Resources>
                                    </ContentControl>
                                    <Border DockPanel.Dock="Left" Margin="0,0,10,0"
                                            Tag="{DynamicResource GridViewDisplayGameNameIfLogoVisible}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                            <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControlGrid, Path=Visibility}" Value="Visible" />
                                                            <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                            <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Name="PART_TextDisplayName" FontSize="{DynamicResource FontSizeLarger}"
                                                   FontFamily="{DynamicResource FontFamily}" FontWeight="SemiBold"
                                                   TextWrapping="Wrap" 
                                                   VerticalAlignment="Center" Foreground="White" />
                                    </Border>
                                    
                                </DockPanel>

                                <ContentControl DockPanel.Dock="Top" x:Name="DuplicateHider_SourceSelector" 
                                        HorizontalAlignment="Right"
                                        VerticalContentAlignment="Center"   
                                        Margin="0,0,0,0"  
                                        Height="24"
                                        RenderOptions.BitmapScalingMode="Fant" />
                                
                                <Grid DockPanel.Dock="Top" Margin="0,10,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MaxWidth="150" />
                                        <ColumnDefinition Width="*" MaxWidth="150" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button Name="PART_ButtonPlayAction" Grid.Column="0"
                                            Height="40" Style="{DynamicResource PlayButtonViews}"/>
                                    <Button Name="PART_ButtonContextAction"
                                            Height="40" Grid.Column="0" Style="{DynamicResource ContextButtonViews}"/>
                                    <Button Name="PART_ButtonMoreActions"
                                            Content="{DynamicResource LOCMoreAction}"
                                            Height="40" Grid.Column="1" Margin="10,0,0,0" Style="{DynamicResource MoreActionButtonViews}"/>
                                    <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="0,0,5,0">
                                        <ContentControl x:Name="PlayState_GameStateSwitchControl" Margin="10,0,0,0"
                                                        Visibility="{PluginSettings Plugin=PlayState, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        <Button x:Name="PART_ButtonEditGame"
                                                Margin="10,0,0,0" Height="40" Focusable="False"
                                                Content="&#xeded;" FontFamily="{DynamicResource FontIcoFont}">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                    <Setter Property="Opacity" Value="0.1" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation 
                                                                        Storyboard.TargetProperty="(Button.Opacity)" 
                                                                        To="1" Duration="0:0:0.5" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation 
                                                                        Storyboard.TargetProperty="(Button.Opacity)" 
                                                                        To="0.1" Duration="0:0:0.5" />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <ScrollViewer DockPanel.Dock="Top" HorizontalAlignment="Stretch"
                                              HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                                              x:Name="PART_ScrollViewHost">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderDetails}"
                                                  IsExpanded="True"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCGameDetails}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <StackPanel.Resources>
                                                    <Style TargetType="ItemsControl">
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                    </Style>
                                                    <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                        <Setter Property="Margin" Value="0,4,8,4" />
                                                        <Setter Property="VerticalAlignment" Value="Top" />
                                                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                    </Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}" />
                                                </StackPanel.Resources>

                                                <GridEx Margin="0,5,0,10"
                                                        ColumnCount="2" StarColumns="1"
                                                        RowCount="25" AutoLayoutColumns="2">
                                                    <Grid.Resources>
                                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
                                                        <Style x:Key="Icon" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                            <Setter Property="Width" Value="24"/>
                                                            <Setter Property="FontWeight" Value="Normal"/>
                                                        </Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Normal" />
                                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                        </Style>
                                                    </Grid.Resources>

                                                    <Label Name="PART_ElemPlayTime" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEDC;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCTimePlayed}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemLastPlayed" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCLastPlayed}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemRecentActivity" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRecentActivityLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextRecentActivity" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemAdded" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDateAddedLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextAdded" VerticalAlignment="Center" />
                                                    
                                                    <Label Name="PART_ElemCompletionStatus" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEED6;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCompletionStatus}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonCompletionStatus" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemInstallDirectory" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC5B;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameInstallDirTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonInstallDirectory" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemInstallSize" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xef43;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCInstallSizeLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextInstallSize" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemReleaseDate" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC45;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameReleaseDateTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonReleaseDate" VerticalAlignment="Center" />
                                                    
                                                    <Label Name="PART_ElemLibrary" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameProviderTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonLibrary" VerticalAlignment="Center" />
                                                    <Label Name="PART_ElemSource" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF65;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSourceLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonSource" VerticalAlignment="Center" />
                                                    <Label Name="PART_ElemPlatform" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEEE;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGamePlatformTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsPlatforms" />

                                                    <Label Name="PART_ElemCategories" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF74;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons2BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGameCategoriesTitle}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsCategories" />

                                                    <Label Name="PART_ElemGenres" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF74;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCGenreLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsGenres" />

                                                    <Label Name="PART_ElemDevelopers" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEF3;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCDeveloperLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsDevelopers" />

                                                    <Label Name="PART_ElemPublishers" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEF3;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIcons3BackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCPublisherLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsPublishers" />

                                                    <Label Name="PART_ElemAgeRating" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCAgeRatingLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsAgeRatings" />

                                                    <Label Name="PART_ElemSeries" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEEEF;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCSeriesLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsSeries" />

                                                    <Label Name="PART_ElemRegion" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xF02C;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCRegionLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsRegions" />

                                                    <Label Name="PART_ElemVersion" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEFD1;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCVersionLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <Button Name="PART_ButtonVersion" VerticalAlignment="Center" />

                                                    <Label Name="PART_ElemCommunityScore" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xF000;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCommunityScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextCommunityScore" VerticalAlignment="Center" Style="{DynamicResource TextBlockGameScore}" />

                                                    <Label Name="PART_ElemCriticScore" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xF000;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCCriticScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextCriticScore" VerticalAlignment="Center" Style="{DynamicResource TextBlockGameScore}" />

                                                    <Label Name="PART_ElemUserScore" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xF000;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCUserScore}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <TextBlock Name="PART_TextUserScore" VerticalAlignment="Center" Style="{DynamicResource TextBlockGameScore}" />

                                                    <Label Name="PART_ElemFeatures" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF74;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCFeaturesLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsFeatures" />

                                                    <Label Name="PART_ElemTags" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEC85;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCTagsLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsTags" />

                                                    <Label Name="PART_ElemLinks" >
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xEF71;" Style="{StaticResource Icon}" Foreground="{DynamicResource DetailsIconsBackgroundBrush}"
                                                               FontFamily="{StaticResource FontIcoFont}" 
                                                               Visibility="{DynamicResource GridViewDetailsIconsVisibility}" />
                                                            <TextBlock Text="{DynamicResource LOCLinksLabel}" />
                                                        </StackPanel>
                                                    </Label>
                                                    <ItemsControl Name="PART_ItemsLinks" />
                                                </GridEx>
                                            </StackPanel>
                                        </Expander>
                                        
                                        <!--#region ExtraMetadataLoader Video Control-->
                                        <TextBlock x:Name="VideoFeedVisibilityProxy"
                                                   Grid.Row="{DynamicResource GridViewSectionOrderVideo}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Expander Name="VideoFeed"
                                                  Grid.Row="{DynamicResource GridViewSectionOrderVideo}"
                                                  IsExpanded="True"
                                                  Visibility="{Binding ElementName=VideoFeedVisibilityProxy, Path=Visibility}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCExtra_Metadata_Loader_VideoLabel}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <Grid>
                                                    <!--Rectangle used to expand the panel while the video loads-->
                                                    <Viewbox Stretch="Uniform" Visibility="{Binding ElementName=VideoFeed, Path=Visibility}">
                                                        <Rectangle Width="16" Height="9" Fill="Transparent" IsHitTestVisible="False" />
                                                    </Viewbox>
                                                    <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl" />
                                                </Grid>
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <Expander Name="PART_ElemNotes"
                                                  Grid.Row="{DynamicResource GridViewSectionOrderNotes}"
                                                  IsExpanded="True"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCNotesLabel}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <TextBox Name="PART_TextNotes" IsReadOnly="True"
                                                         Background="Transparent"
                                                     BorderThickness="0"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                     Margin="-1,0,-1,0" Padding="0"/>
                                            </StackPanel>
                                        </Expander>

                                        <Expander Name="PART_ElemDescription"
                                                  Grid.Row="{DynamicResource GridViewSectionOrderDescription}"
                                                  IsExpanded="True"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCGameDescriptionTitle}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <HtmlTextView Name="PART_HtmlDescription"
                                                              HtmlFontSize="{DynamicResource FontSize}"
                                                              HtmlFontFamily="{DynamicResource FontFamily}"
                                                              HtmlForeground="{DynamicResource TextColor}"
                                                              LinkForeground="{DynamicResource GlyphColor}"                                      
                                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                              ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                            </StackPanel>
                                        </Expander>

                                        <!--#region SuccessStory-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderSuccessStory}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCSuccessStoryAchievements}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <DockPanel Margin="0,10,0,0">
                                                    <ContentControl DockPanel.Dock="Left" x:Name="SuccessStory_PluginButton" Height="40" VerticalAlignment="Center"/>
                                                    <ContentControl x:Name="SuccessStory_PluginProgressBar" Margin="5,5,20,0" VerticalAlignment="Center" Height="28" />
                                                </DockPanel>
                                                <ContentControl x:Name="SuccessStory_PluginCompactUnlocked" Margin="0,10,20,0" />
                                                <ContentControl x:Name="SuccessStory_PluginCompactLocked" Margin="0,10,20,0" />
                                                <ContentControl x:Name="SuccessStory_PluginUserStats" Margin="0,10,20,0" />
                                                <ContentControl x:Name="SuccessStory_PluginChart" Margin="0,10,20,0" />
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region HowLongToBeat-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderHowLongToBeat}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=HowLongToBeat, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="HowLongToBeat" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <DockPanel>
                                                    <ContentControl DockPanel.Dock="Left" x:Name="HowLongToBeat_PluginButton" VerticalAlignment="Top"/>
                                                    <ContentControl x:Name="HowLongToBeat_PluginProgressBar" Margin="5,5,0,0" VerticalAlignment="Center"/>
                                                </DockPanel>
                                                <GridEx Name="HltbDataGrid" ColumnCount="2"
                                                        Margin="0,15,0,0"
                                                        AutoLayoutColumns="2" RowCount="6"
                                                        Tag="{DynamicResource GridViewShowHltbDataGrid}">
                                                    <GridEx.Style>
                                                        <Style>
                                                            <Setter Property="Control.Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{PluginSettings Plugin=HowLongToBeat, Path=HasData, FallbackValue=False}" Value="True" />
                                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag, FallbackValue=False}" Value="True" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="Control.Visibility" Value="Visible" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </GridEx.Style>
                                                    <Label Content="{DynamicResource LOCHowLongToBeatMainStory}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=MainStoryFormat, Path=Visibility}" />
                                                    <TextBlock Name="MainStoryFormat"
                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=MainStoryFormat, FallbackValue=--}"/>

                                                    <Label Content="{DynamicResource LOCHowLongToBeatMainExtra}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=MainExtraFormat, Path=Visibility}" />
                                                    <TextBlock Name="MainExtraFormat"
                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=MainExtraFormat, FallbackValue=--}"/>

                                                    <Label Content="{DynamicResource LOCHowLongToBeatCompletionist}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=CompletionistFormat, Path=Visibility}" />
                                                    <TextBlock Name="CompletionistFormat"
                                                           Style="{DynamicResource HltbGridTextStyle}"
                                                           Text="{PluginSettings Plugin=HowLongToBeat, Path=CompletionistFormat, FallbackValue=--}"/>

                                                    <Label Content="{DynamicResource LOCHowLongToBeatSolo}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=SoloFormat, Path=Visibility}" />
                                                    <TextBlock Name="SoloFormat"
                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=SoloFormat, FallbackValue=--}"/>

                                                    <Label Content="{DynamicResource LOCHowLongToBeatCoOp}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=CoOpFormat, Path=Visibility}" />
                                                    <TextBlock Name="CoOpFormat"
                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=CoOpFormat, FallbackValue=--}"/>

                                                    <Label Content="{DynamicResource LOCHowLongToBeatVs}"
                                                           Style="{DynamicResource HltbGridLabelStyle}"
                                                           Visibility="{Binding ElementName=VsFormat, Path=Visibility}" />
                                                    <TextBlock Name="VsFormat"
                                                               Style="{DynamicResource HltbGridTextStyle}"
                                                               Text="{PluginSettings Plugin=HowLongToBeat, Path=VsFormat, FallbackValue=--}"/>
                                                </GridEx>
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region ScreenshotsVisualizer-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderScreenshotsVisualizer}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=ScreenshotsVisualizer, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCSsvTitle}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <ContentControl x:Name="ScreenshotsVisualizer_PluginSinglePicture" Margin="0,10,20,0" />
                                                <ContentControl x:Name="ScreenshotsVisualizer_PluginListScreenshots" Margin="0,10,20,0" />
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region GameActivity-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderGameActivity}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=GameActivity, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCGameActivityTitle}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <ContentControl x:Name="GameActivity_PluginButton" />
                                                <ContentControl x:Name="GameActivity_PluginChartTime" Margin="0,5,0,0" />
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region ReviewViewer-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderReviewViewer}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=ReviewViewer, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOCReview_Viewer_ReviewsLabel}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <ContentControl x:Name="ReviewViewer_ReviewsControl" Margin="0,5,10,5"/>
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region NewsViewer-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderNewsViewer}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=NewsViewer, Path=ReviewsAvailable, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="{DynamicResource LOC_NewsViewer_NewsViewerControl_NewsLabel}" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <ContentControl x:Name="NewsViewer_NewsViewerControl" Margin="0,0,10,0" />
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->

                                        <!--#region CheckDlc-->
                                        <Expander Grid.Row="{DynamicResource GridViewSectionOrderCheckDlc}"
                                                  IsExpanded="True"
                                                  Visibility="{PluginSettings Plugin=CheckDlc, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  Margin="0,0,5,0">
                                            <Expander.Header>
                                                <TextBlock Text="DLC" Style="{DynamicResource BaseTextBlockStyle}"
                                                           Cursor="Hand"
                                                           FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" />
                                            </Expander.Header>
                                            <StackPanel Margin="0,0,0,25">
                                                <StackPanel.Resources>
                                                    <Style TargetType="ListBox">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderThickness" Value="0" />
                                                    </Style>
                                                </StackPanel.Resources>
                                                <Separator Background="{DynamicResource GridViewSeparatorBrush}" Margin="0,5,0,5"/>
                                                <ContentControl x:Name="CheckDlc_PluginButton" MinHeight="20" MinWidth="120"
                                                                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,10"
                                                                Visibility="{PluginSettings Plugin=CheckDlc, Path=EnableIntegrationButton, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <ContentControl x:Name="CheckDlc_PluginListDlcAll" Height="700" Margin="0,0,0,10"/>
                                                <ContentControl x:Name="CheckDlc_PluginListDlcOwned" Height="700" Margin="0,0,0,10"/>
                                                <ContentControl x:Name="CheckDlc_PluginListDlcNotOwned" Height="700" Margin="0,0,0,10"/>
                                            </StackPanel>
                                        </Expander>
                                        <!--#endregion -->
                                    </Grid>
                                </ScrollViewer>
                            </DockPanel>
                        </DockPanel>
                    </Border>                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" x:Key="HltbGridTextStyle">
        <Setter Property="Margin" Value="20,5,0,5" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text, FallbackValue=--}" Value="--">
                <Setter Property="Visibility" Value="Collapsed" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Label" x:Key="HltbGridLabelStyle">
        <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrushDarker}"/>
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>