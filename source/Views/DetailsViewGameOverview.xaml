                                        <StackPanel Margin="0,0,0,20"
                                                    Visibility="{PluginSettings Plugin=NewsViewer, Path=ReviewsAvailable, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="0,0,0,5"
                                                Style="{DynamicResource DetailsViewSectionTitleText}"
                                                Text="{DynamicResource LOC_NewsViewer_NewsViewerControl_NewsLabel}" />
                                            <Border Style="{DynamicResource BorderVerticalSeparator}" />
                                            <ContentControl x:Name="NewsViewer_NewsViewerControl"
                                                        Margin="0,5,0,5"
                                                        FontWeight="Normal" />
                                        </StackPanel>
                                        <!--#endregion-->
                                        
                                        <TabControl
                                            Margin="0,-4,0,0"
                                            Focusable="False"
                                            Style="{StaticResource TabControlDetailsView}">
                                            <TabItem Name="PART_ElemDescription">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCGameDescriptionTitle}" />
                                                </TabItem.Header>
                                                <StackPanel Margin="0,16,0,0" Background="{DynamicResource DetailsViewWrapBackgroundsBrush}">
                                                    <HtmlTextView Name="PART_HtmlDescription"
                                                        Margin="0,5,0,5"
                                                        Focusable="False"
                                                        HtmlFontFamily="{DynamicResource FontFamily}"
                                                        HtmlFontSize="{DynamicResource FontSize}"
                                                        HtmlForeground="{DynamicResource DetailsViewDetailsTextColor}"
                                                        LinkForeground="{DynamicResource GlyphColor}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                        ScrollViewer.VerticalScrollBarVisibility="Disabled" />
                                                </StackPanel>
                                            </TabItem>

                                            <TabItem Visibility="{Binding ElementName=NotesVisibilityProxy, Path=Tag}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCNotesLabel}" />
                                                </TabItem.Header>
                                                <StackPanel Margin="0,16,0,0">
                                                    <TextBlock x:Name="NotesVisibilityProxy" Visibility="Collapsed">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Tag" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=PART_TextNotes, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{PluginSettings Plugin=PlayNotes, Path=IsControlVisible, FallbackValue=False}" Value="True">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBox Name="PART_TextNotes"
                                                        Margin="-1,5,-1,5"
                                                        Padding="0"
                                                        AcceptsReturn="True"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontWeight="Normal"
                                                        IsReadOnly="True"
                                                        TextWrapping="Wrap" />

                                                    <ContentControl x:Name="PlayNotes_NotesViewerControl"
                                                        Margin="0,10,0,0"
                                                        Visibility="{PluginSettings Plugin=PlayNotes,
                                                                                    Path=IsControlVisible,
                                                                                    Converter={StaticResource BooleanToVisibilityConverter},
                                                                                    FallbackValue=Collapsed}" />
                                                </StackPanel>
                                            </TabItem>



                                            <TabItem Visibility="{PluginSettings Plugin=VNDBNexus, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="VNDB" />
                                                </TabItem.Header>
                                                <ContentControl x:Name="VNDBNexus_VndbVisualNovelViewControl"
                                                    Margin="0,16,0,0"
                                                    FontWeight="Normal" />
                                            </TabItem>



                                            <!--region SuccessStory-->
                                            <TabItem Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCSuccessStoryAchievements}" />
                                                </TabItem.Header>
                                                <StackPanel
                                                    Margin="0,15,0,0"
                                                    Background="{TemplateBinding Background}"
                                                    Orientation="Vertical">
                                                    <ContentControl x:Name="SuccessStory_PluginProgressBar" />
                                                    <ContentControl x:Name="SuccessStory_PluginCompactUnlocked" Margin="0,10,20,0" />
                                                    <ContentControl x:Name="SuccessStory_PluginCompactLocked" Margin="0,10,20,0" />
                                                    <ContentControl x:Name="SuccessStory_PluginUserStats" Margin="0,10,20,0" />
                                                    <ContentControl x:Name="SuccessStory_PluginList"
                                                        MinHeight="550"
                                                        Margin="0,10,20,0" />
                                                    <ContentControl x:Name="SuccessStory_PluginChart" Margin="0,10,20,0" />
                                                </StackPanel>
                                            </TabItem>
                                            <!--endregion-->

                                            <!--region GameActivity-->
                                            <TabItem Visibility="{PluginSettings Plugin=GameActivity, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCGameActivityTitle}" />
                                                </TabItem.Header>
                                                <StackPanel
                                                    Margin="0,15,0,0"
                                                    Background="{TemplateBinding Background}"
                                                    Orientation="Vertical">
                                                    <ContentControl x:Name="GameActivity_PluginChartTime" Margin="0,10,0,0" />
                                                </StackPanel>
                                            </TabItem>
                                            <!--endregion-->
                                            <!--region ReviewViewer-->
                                            <TabItem Visibility="{PluginSettings Plugin=ReviewViewer, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCReview_Viewer_ReviewsLabel}" />
                                                </TabItem.Header>
                                                <StackPanel Margin="0,15,0,0" Orientation="Vertical">
                                                    <ContentControl x:Name="ReviewViewer_ReviewsControl"
                                                        Margin="0,5,0,5"
                                                        FontWeight="Normal" />
                                                </StackPanel>
                                            </TabItem>
                                            <!--endregion-->
                                            <!--#region CheckDlc-->
                                            <TabItem Visibility="{PluginSettings Plugin=CheckDlc, Path=HasData, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="DLC" />
                                                </TabItem.Header>
                                                <StackPanel Margin="0,15,0,0" Orientation="Vertical">
                                                    <StackPanel.Resources>
                                                        <Style TargetType="ListBox">
                                                            <Setter Property="Background" Value="Transparent" />
                                                            <Setter Property="BorderThickness" Value="0" />
                                                        </Style>
                                                    </StackPanel.Resources>
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcAll"
                                                        Height="700"
                                                        Margin="0,5,0,5" />
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcOwned"
                                                        Height="700"
                                                        Margin="0,5,0,5" />
                                                    <ContentControl x:Name="CheckDlc_PluginListDlcNotOwned"
                                                        Height="700"
                                                        Margin="0,5,0,5" />
                                                </StackPanel>
                                            </TabItem>
                                            <!--#endregion-->

                                            <!--#region WebExplorer-->
                                            <TabItem Visibility="{Binding ElementName=WebExplorer_BrowserHostViewControl, Path=Content.IsControlVisible, Converter={StaticResource BooleanToVisibilityConverter}, TargetNullValue=Collapsed, FallbackValue=Collapsed}">
                                                <TabItem.Header>
                                                    <TextBlock Style="{DynamicResource DetailsViewTabHeaderStyle}" Text="{DynamicResource LOCWebExplorer_WebLabel}" />
                                                </TabItem.Header>
                                                <Grid Margin="0,15,0,15" SnapsToDevicePixels="True" UseLayoutRounding="True">
                                                    <Border Background="{DynamicResource DetailsViewSectionBackgroundBrush}"
                                                        CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />
                                                    <ContentControl x:Name="WebExplorer_BrowserHostViewControl"
                                                                    SnapsToDevicePixels="True" UseLayoutRounding="True"
                                                                    Height="{DynamicResource WebExplorerControlHeight}"
                                                                    Margin="0,5,0,5" />
                                                </Grid>
                                            </TabItem>
                                            <!--#endregion-->

                                        </TabControl>

                                        <StackPanel Margin="0,20,0,0" Visibility="{Binding ElementName=GameRelationsVisibilityProxy, Path=Tag}">
                                            <TextBlock Style="{DynamicResource DetailsViewSectionTitleText}" Text="{DynamicResource LOCGameRelations_RelatedGamesLabel}" />
                                            <Border
                                                Margin="0,15,0,0"
                                                Padding="15"
                                                Background="{DynamicResource DetailsViewSectionBackgroundBrush}"
                                                CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock x:Name="GameRelationsVisibilityProxy" Visibility="Collapsed">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Tag" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SimilarGamesControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameSeriesControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SameDeveloperControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=Panel_GameRelations_SamePublisherControl, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Tag" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <Expander x:Name="Panel_GameRelations_SimilarGamesControl"
                                                        Margin="0,10,0,0"
                                                        Header="{DynamicResource LOCGameRelations_SimilarGamesLabel}"
                                                        IsExpanded="True"
                                                        Visibility="{PluginSettings Plugin=GameRelations,
                                                                                    Path=SimilarGamesControlSettings.IsVisible,
                                                                                    Converter={StaticResource BooleanToVisibilityConverter},
                                                                                    FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SimilarGamesControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SameSeriesControl"
                                                        Margin="0,10,0,0"
                                                        Header="{DynamicResource LOCGameRelations_SameSeriesLabel}"
                                                        IsExpanded="True"
                                                        Visibility="{PluginSettings Plugin=GameRelations,
                                                                                    Path=SameSeriesControlSettings.IsVisible,
                                                                                    Converter={StaticResource BooleanToVisibilityConverter},
                                                                                    FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SameSeriesControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SameDeveloperControl"
                                                        Margin="0,10,0,0"
                                                        Header="{DynamicResource LOCGameRelations_SameDeveloperLabel}"
                                                        IsExpanded="True"
                                                        Visibility="{PluginSettings Plugin=GameRelations,
                                                                                    Path=SameDeveloperControlSettings.IsVisible,
                                                                                    Converter={StaticResource BooleanToVisibilityConverter},
                                                                                    FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SameDeveloperControl" Margin="0,10,0,0" />
                                                    </Expander>

                                                    <Expander x:Name="Panel_GameRelations_SamePublisherControl"
                                                        Margin="0,10,0,0"
                                                        Header="{DynamicResource LOCGameRelations_SamePublisherLabel}"
                                                        IsExpanded="True"
                                                        Visibility="{PluginSettings Plugin=GameRelations,
                                                                                    Path=SamePublisherControlSettings.IsVisible,
                                                                                    Converter={StaticResource BooleanToVisibilityConverter},
                                                                                    FallbackValue=Collapsed}">
                                                        <ContentControl x:Name="GameRelations_SamePublisherControl" Margin="0,10,0,0" />
                                                    </Expander>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                </Grid>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>