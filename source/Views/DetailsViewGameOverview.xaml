<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <ScrollViewer x:Name="PART_ScrollViewHost"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                        d:DesignHeight="1550"
                        d:DesignWidth="1280"
                        HorizontalScrollBarVisibility="Disabled"
                        Style="{DynamicResource DetailsScrollViewer}"
                        VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.OpacityMask>
                                    <VisualBrush Visual="{Binding ElementName=HeaderMask}" />
                                </Grid.OpacityMask>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}" Value="True" />
                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsVideoPlaying, FallbackValue=False}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </MultiDataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Binding ElementName=PART_ImageBackground, Path=Height}" />
                                    <RowDefinition Height="{Binding ElementName=BackgroundChanger_PluginBackgroundImage, Path=Height}" />
                                </Grid.RowDefinitions>
                                <Border Name="HeaderMask"
                                    Grid.RowSpan="2"
                                    Tag="{DynamicResource DetailsViewBackgroundImageUseOpacityMask}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#000000" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <RadialGradientBrush Center="0.5,0" GradientOrigin="0.5,0" RadiusX="2" RadiusY="0.9">
                                                                <RadialGradientBrush.GradientStops>
                                                                    <GradientStop Offset="0.3" Color="Black" />
                                                                    <GradientStop Offset="1" Color="Transparent" />
                                                                </RadialGradientBrush.GradientStops>
                                                            </RadialGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border x:Name="PART_ImageBackground_Wrapper" Grid.Row="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataBackground, FallbackValue=False}" Value="True" />
                                                        <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableBackgroundImage, FallbackValue=False}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <FadeImage x:Name="PART_ImageBackground"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Stretch="Uniform" />
                                </Border>

                                <ContentControl x:Name="BackgroundChanger_PluginBackgroundImage"
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    ClipToBounds="True" />

                                <Border
                                    Grid.RowSpan="2"
                                    Background="{StaticResource DarkNoiseBrush}"
                                    IsHitTestVisible="False"
                                    Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}" />

                                <Border x:Name="ImageBackgroundNoise"
                                    Grid.RowSpan="2"
                                    Background="{DynamicResource NoiseBrush}"
                                    Opacity="0.030" />
                            </Grid>

                            <!--ExtraMetadataLoader alternative video player-->
                            <WrapPanel x:Name="AlternativeVideoPlayer"
                                Margin="{DynamicResource PanelTopPanelSeparator}"
                                Tag="{DynamicResource DetailsViewBackgroundImageUseOpacityMask}">
                                <WrapPanel.Style>
                                    <Style TargetType="{x:Type WrapPanel}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableAlternativeDetailsVideoPlayer, FallbackValue=False}" Value="True" />
                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsAnyVideoAvailable, FallbackValue=False}" Value="True" />
                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableVideoPlayer, FallbackValue=False}" Value="True" />
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <RadialGradientBrush Center="0.5,0" GradientOrigin="0.5,0" RadiusX="2" RadiusY="0.9">
                                                            <RadialGradientBrush.GradientStops>
                                                                <GradientStop Offset="0.3" Color="Black" />
                                                                <GradientStop Offset="1" Color="Transparent" />
                                                            </RadialGradientBrush.GradientStops>
                                                        </RadialGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <Grid>
                                    <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControlAlternative" />
                                    <Border
                                        Background="{StaticResource DarkNoiseBrush}"
                                        IsHitTestVisible="False"
                                        Opacity="{DynamicResource DetailsBackgroundDarkenLayerOpacity}">
                                        <Border.OpacityMask>
                                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Offset="0.2" Color="#F2FFFFFF" />
                                                    <GradientStop Offset="0.8" Color="#B3FFFFFF" />
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Border.OpacityMask>
                                    </Border>
                                </Grid>
                            </WrapPanel>

                            <Grid Margin="40,0,40,0" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="{Settings CalculatedGameDetailsIndentation}" MinHeight="{DynamicResource PanelTopPanelSeparatorHeight}" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}">
                                    <!--#region Logo & Cover Image-->

                                    <Grid x:Name="ExtraMetadataLoader_LogoLoaderControlGrid"
                                        MinHeight="{PluginSettings Plugin=ExtraMetadataLoader,
                                                                   Path=LogoMaxHeight,
                                                                   FallbackValue=0}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=EnableLogos, FallbackValue=False}" Value="false">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=DetailsViewReserveLogoSpaceIfMissingProxy, Path=Tag, FallbackValue=False}" Value="False" />
                                                            <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="False" />
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <TextBlock x:Name="DetailsViewReserveLogoSpaceIfMissingProxy" Visibility="Collapsed"
                                                   Tag="{DynamicResource DetailsViewReserveLogoSpaceIfMissing}" />
                                        <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                    </Grid>

                                    <!--GridConverterGridPanelCloseButton-->
                                    <!--#regionend-->
                                </Grid>
                                <DockPanel
                                    Grid.Row="2"
                                    MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                    Margin="0,0,0,0"
                                    Background="Transparent">
                                    <StackPanel VerticalAlignment="Bottom" DockPanel.Dock="Left">
                                        <DockPanel HorizontalAlignment="Center">
                                            <Image Name="PART_ImageIcon"
                                                MaxWidth="32"
                                                MaxHeight="32"
                                                Margin="0,0,10,0"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                RenderOptions.BitmapScalingMode="Fant">
                                                <Image.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="15"
                                                        Opacity="0.20"
                                                        ShadowDepth="0"
                                                        Color="#0d0d0d" />
                                                </Image.Effect>
                                                <Image.Clip>
                                                    <RectangleGeometry RadiusX="4" RadiusY="4" Rect="0,0,32,32" />
                                                </Image.Clip>
                                            </Image>

                                            <Border DockPanel.Dock="Left" Tag="{DynamicResource DetailsViewDisplayGameNameIfLogoVisible}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="False" />
                                                                    <Condition Binding="{Binding ElementName=ExtraMetadataLoader_LogoLoaderControl, Path=Visibility, FallbackValue=Collapsed}" Value="Visible" />
                                                                    <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Name="PART_TextDisplayName"
                                                    Margin="0,0,10,0"
                                                    VerticalAlignment="Center"
                                                    FontFamily="{DynamicResource FontFamily}"
                                                    FontSize="{DynamicResource FontSizeLargest}"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    TextWrapping="Wrap" />
                                            </Border>




                                        </DockPanel>



                                        <ContentControl x:Name="CheckLocalizations_PluginFlags"
                                            Height="30"
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Opacity="0.85"
                                            Visibility="{PluginSettings Plugin=CheckLocalizations,
                                                                        Path=EnableIntegrationFlags,
                                                                        FallbackValue=Collapsed,
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <DockPanel Margin="0,15,0,0" HorizontalAlignment="Center">
                                            <ContentControl x:Name="DuplicateHider_SourceSelector"
                                                Height="24"
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                RenderOptions.BitmapScalingMode="Fant" />

                                            <ContentControl x:Name="NewsViewer_PlayersInGameViewerControl"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center">
                                                <ContentControl.Resources>
                                                    <Style BasedOn="{StaticResource PlayersCountButtonStyle}" TargetType="Button" />
                                                </ContentControl.Resources>
                                            </ContentControl>

                                            <ContentControl x:Name="LibraryManagement_PluginFeaturesIconList"
                                                Height="35"
                                                Margin="15,0,0,0"
                                                            VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Opacity="0.85"
                                                Visibility="{PluginSettings Plugin=LibraryManagement,
                                                                            Path=EnableIntegrationFeatures,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />

                                            <ContentControl x:Name="GogSecondClassWatcher_SecondClassWatcherControl"
                                                            VerticalAlignment="Center"
                                                            Visibility="{PluginSettings Plugin=GogSecondClassWatcher, Path=IsControlVisible, FallbackValue=Collapsed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Margin="5,0,0,0"/>
                                        </DockPanel>

                                    </StackPanel>
                                </DockPanel>

                                <Grid
                                    Grid.Row="4"
                                    MaxWidth="{DynamicResource DetailsViewDetailsMaxWidth}"
                                    Margin="0,120,0,0">
                                    <Grid.Resources>
                                        <Style x:Key="BorderVerticalSeparator" TargetType="Border">
                                            <Style.Setters>
                                                <Setter Property="Background" Value="#0Df1f1f1" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Height" Value="1" />
                                                <Setter Property="Margin" Value="0,0,0,15" />
                                            </Style.Setters>
                                        </Style>
                                        <Style x:Key="DetailsViewSectionTitleText"
                                            BasedOn="{StaticResource BaseTextBlockStyle}"
                                            TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="Medium" />
                                            <Setter Property="FontSize" Value="{DynamicResource FontSizeLarger}" />
                                            <Setter Property="Foreground" Value="{DynamicResource DetailsViewSectionTitleTextBrush}" />
                                        </Style>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <WrapPanel Margin="0,15,0,0" HorizontalAlignment="Left">
                                            <Grid
                                                Width="300"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Button Name="PART_ButtonPlayAction"
                                                    Grid.Column="0"
                                                    Height="40"
                                                    Margin="0,0,10,10"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Style="{DynamicResource PlayButtonViews}" />
                                                <Button Name="PART_ButtonContextAction"
                                                    Grid.Column="0"
                                                    Height="40"
                                                    Margin="0,0,10,10"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Style="{DynamicResource ContextButtonViews}" />
                                                <Button Name="PART_ButtonMoreActions"
                                                    Grid.Column="1"
                                                    Width="40"
                                                    Margin="0,0,10,10"
                                                    Padding="0"
                                                    Content="&#xEAC8;"
                                                    FontFamily="{DynamicResource FontIcoFont}"
                                                    Style="{DynamicResource MoreActionButtonViews}" />
                                                <Button x:Name="PART_ButtonEditGame"
                                                    Grid.Column="2"
                                                    Width="40"
                                                    Height="40"
                                                    Margin="0,0,10,10"
                                                    Content="&#xEDED;"
                                                    Focusable="False"
                                                    FontFamily="{DynamicResource FontIcoFont}"
                                                    Style="{DynamicResource MoreActionButtonViews}" />
                                            </Grid>
                                            <ToggleButton Name="GameFavoriteToggleButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                Focusable="False"
                                                IsChecked="{PluginSettings Plugin=ThemeExtras,
                                                                           Path=Game.Favorite,
                                                                           Mode=TwoWay,
                                                                           FallbackValue={StaticResource False}}"
                                                Style="{DynamicResource PanelFavoriteToggleButton}"
                                                Visibility="{PluginStatus Plugin=felixkmh_Extras_Plugin}" />
                                            <ContentControl x:Name="PlayState_GameStateSwitchControl"
                                                Margin="0,0,10,10"
                                                Visibility="{PluginSettings Plugin=PlayState,
                                                                            Path=IsControlVisible,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="ScreenshotsVisualizer_PluginButton"
                                                Height="40"
                                                MaxWidth="150"
                                                Margin="0,0,10,10"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=ScreenshotsVisualizer,
                                                                            Path=HasData,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="HowLongToBeat_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=HowLongToBeat,
                                                                            Path=EnableIntegrationButton,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckDlc_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=CheckDlc,
                                                                            Path=EnableIntegrationButton,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SuccessStory_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=SuccessStory,
                                                                            Path=HasData,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="GameActivity_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=GameActivity,
                                                                            Path=HasData,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="SystemChecker_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=SystemChecker,
                                                                            Path=EnableIntegrationButton,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <ContentControl x:Name="CheckLocalizations_PluginButton"
                                                Height="40"
                                                Margin="0,0,10,10"
                                                VerticalAlignment="Center"
                                                DockPanel.Dock="Left"
                                                Visibility="{PluginSettings Plugin=CheckLocalizations,
                                                                            Path=EnableIntegrationButton,
                                                                            FallbackValue=Collapsed,
                                                                            Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </WrapPanel>
                                        <Border
                                            Margin="0,5,0,15"
                                            Background="{DynamicResource DetailsViewSectionBackgroundBrush}"
                                            CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}">
                                            <DockPanel>
                                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                                    <Border
                                                        Width="{Binding ElementName=CoverGridContainer, Path=ActualWidth}"
                                                        Height="{Binding ElementName=CoverGridContainer, Path=ActualHeight}"
                                                        Padding="0.5"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Background="Transparent"
                                                        Visibility="{Binding ElementName=CoverGridContainer, Path=Visibility}">
                                                        <Border
                                                            Background="Transparent"
                                                            BorderBrush="#0d0d0d"
                                                            BorderThickness="8"
                                                            CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}">
                                                            <Border.Effect>
                                                                <DropShadowEffect
                                                                    BlurRadius="15"
                                                                    Opacity="0.3"
                                                                    RenderingBias="Performance"
                                                                    ShadowDepth="0"
                                                                    Color="#0d0d0d" />
                                                            </Border.Effect>
                                                        </Border>
                                                    </Border>
                                                    <Grid Name="CoverGridContainer"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                        <Grid.Style>
                                                            <Style TargetType="Grid">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=PART_ImageCover, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Grid.Style>
                                                        <Border Name="Mask"
                                                            Background="White"
                                                            CornerRadius="{DynamicResource DetailsViewCoverCornerRadius}" />

                                                        <Border>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=BackgroundChanger_PluginCoverImage, Path=Visibility}" Value="Visible">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <Image Name="PART_ImageCover"
                                                                Height="{Settings GameDetailsCoverHeight}"
                                                                RenderOptions.BitmapScalingMode="Fant"
                                                                Stretch="Uniform"
                                                                StretchDirection="Both" />
                                                        </Border>

                                                        <ContentControl x:Name="BackgroundChanger_PluginCoverImage" Height="{Settings GameDetailsCoverHeight}">
                                                            <ContentControl.Style>
                                                                <Style TargetType="ContentControl">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <MultiDataTrigger>
                                                                            <MultiDataTrigger.Conditions>
                                                                                <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=HasDataCover, FallbackValue=False}" Value="True" />
                                                                                <Condition Binding="{PluginSettings Plugin=BackgroundChanger, Path=EnableCoverImage, FallbackValue=False}" Value="True" />
                                                                            </MultiDataTrigger.Conditions>
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </MultiDataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ContentControl.Style>
                                                        </ContentControl>

                                                        <Grid.OpacityMask>
                                                            <VisualBrush Visual="{Binding ElementName=Mask}" />
                                                        </Grid.OpacityMask>
                                                    </Grid>
                                                </Grid>


                                                <StackPanel Margin="20,10,10,10" VerticalAlignment="Center">
                                                    <StackPanel.Resources>
                                                        <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock" />
                                                    </StackPanel.Resources>
                                                    <WrapPanel Margin="0,0,0,0" HorizontalAlignment="Left">
                                                        <WrapPanel.Resources>
                                                            <Style BasedOn="{StaticResource BaseTextBlockStyle}" TargetType="TextBlock" />
                                                            <Style TargetType="Label">
                                                                <Setter Property="FontWeight" Value="Medium" />
                                                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                                                <Setter Property="Padding" Value="0,0,0,5" />
                                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                                <Setter Property="HorizontalAlignment" Value="Left" />
                                                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                                            </Style>
                                                        </WrapPanel.Resources>
                                                        <StackPanel
                                                            Margin="0,0,15,10"
                                                            VerticalAlignment="Top"
                                                            Visibility="{Binding Visibility, ElementName=PART_ElemLastPlayed, Mode=OneWay}">
                                                            <Label Name="PART_ElemLastPlayed" Content="{DynamicResource LOCLastPlayed}" />
                                                            <DockPanel>
                                                                <Viewbox
                                                                    Width="16"
                                                                    Margin="0,0,5,0"
                                                                    VerticalAlignment="Center"
                                                                    Stretch="Uniform">
                                                                    <TextBlock
                                                                        FontFamily="Segoe MDL2 Assets"
                                                                        FontWeight="Normal"
                                                                        Foreground="{DynamicResource DetailsMainIconsBackgroundBrush}"
                                                                        Text="&#xE787;" />
                                                                </Viewbox>
                                                                <TextBlock Name="PART_TextLastActivity" VerticalAlignment="Center" />
                                                            </DockPanel>
                                                        </StackPanel>

                                                        <StackPanel
                                                            Margin="0,0,15,10"
                                                            VerticalAlignment="Top"
                                                            Visibility="{Binding Visibility, ElementName=PART_ElemPlayTime, Mode=OneWay}">
                                                            <Label Name="PART_ElemPlayTime" Content="{DynamicResource LOCTimePlayed}" />
                                                            <DockPanel>
                                                                <Viewbox
                                                                    Width="16"
                                                                    Margin="0,0,5,0"
                                                                    VerticalAlignment="Center"
                                                                    Stretch="Uniform">
                                                                    <TextBlock
                                                                        FontFamily="Segoe MDL2 Assets"
                                                                        FontWeight="Normal"
                                                                        Foreground="{DynamicResource DetailsMainIconsBackgroundBrush}"
                                                                        Text="&#xE121;" />
                                                                </Viewbox>
                                                                <TextBlock Name="PART_TextPlayTime" VerticalAlignment="Center" />
                                                            </DockPanel>
                                                        </StackPanel>

                                                        <DockPanel Margin="0,0,0,10" VerticalAlignment="Top">
                                                            <DockPanel.Style>
                                                                <Style TargetType="DockPanel">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=PART_ButtonCompletionStatus, Path=Visibility}" Value="Visible">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding ElementName=ThemeExtras_SettableCompletionStatus, Path=Visibility}" Value="Visible">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Settings DetailsVisibility.CompletionStatus}" Value="False">
                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
